<StackPanel
    x:Class="DiagnosticMargin.PerformancePanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:DiagnosticMargin"
    Height="20.0"
    Orientation="Horizontal">

    <Button Click="ScrollDownButtonClick">Scroll Down</Button>
    <Button Click="LineScrollDownButtonClick">Line Scroll Down</Button>
    <Button Click="PageScrollDownButtonClick">Page Scroll Down</Button>

    <Button Click="ScrollUpButtonClick">Scroll Up</Button>
    <Button Click="LineScrollUpButtonClick">Line Scroll Up</Button>
    <Button Click="PageScrollUpButtonClick">Page Scroll Up</Button>
</StackPanel>